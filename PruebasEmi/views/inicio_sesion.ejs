<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión - Biblioteca</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #004080, #5dade2); /* degradado azul elegante */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
    
        .login-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
        }
    
        .login-container h1 {
            color: #004080;
            margin-bottom: 20px;
        }
    
        .login-container input[type="text"],
        .login-container input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
    
        .login-container button {
            background-color: #5dade2; /* azul profesional */
            color: #ffffff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }
    
        .login-container button:hover {
            background-color: #2e8bc0; /* azul más oscuro al pasar el mouse */
        }
    
        .message {
            color: red;
            margin-top: 10px;
        }
    
        .register-button {
            background-color: #004080;
            color: #ffffff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            margin-top: 10px;
        }
    
        .register-button:hover {
            background-color: #003366;
        }
    </style>
    
</head>
<body>
    <div class="login-container">
        <!-- Logotipo de la empresa -->
        <img src="imagenes/imagenessalida.png.png" alt="Logotipo de la empresa" style="width: 150px; height: auto; margin-bottom: 20px;">
        <h1>Iniciar Sesión</h1>
        <form id="loginForm" action="/login" method="POST">
            <input type="text" name="usuario" id="usuarioInput" placeholder="Usuario" required>
            <input type="password" name="contrasena" id="contrasenaInput" placeholder="Contraseña" required>
            <button type="submit">Iniciar sesión</button>
        </form>
        <script>
            // Permitir que el admin entre sin contraseña
            document.getElementById('usuarioInput').addEventListener('input', function() {
                const correo = this.value.trim();
                const passInput = document.getElementById('contrasenaInput');
                if (correo === 'Biblioteca@Admin.com') {
                    passInput.removeAttribute('required');
                } else {
                    passInput.setAttribute('required', 'required');
                }
            });
        </script>

        <!-- Mostrar el mensaje de error si es necesario -->
        <% if (mensaje) { %>
            <p class="message"><strong><%= mensaje %></strong></p>
        <% } %>

        <!-- Botón que redirige a la página de registro -->
        <form action="/registrar" method="GET">
            <button class="register-button" type="submit">Registrar cuenta</button>
        </form>
    </div>
</body>
</html>
